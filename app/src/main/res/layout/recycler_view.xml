<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/TextViewrecyclerview"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:padding="20dp"
        android:text="sdfgdfsdg"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/recycler_view_addbuttn"
        android:layout_width="65dp"
        android:layout_height="45dp"
        android:text="+"
        android:textColor="@color/tiger_color"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/TextViewrecyclerview"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/minusbuttn"
        android:layout_width="65dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toEndOf="@id/TextViewrecyclerview"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_addbuttn"
        android:text="-"
        android:textColor="@color/tiger_color"
        android:textSize="18sp"
        android:paddingBottom="5sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintTop_toBottomOf="@id/minusbuttn"
        android:background="@color/tiger_color"/>

</androidx.constraintlayout.widget.ConstraintLayout>